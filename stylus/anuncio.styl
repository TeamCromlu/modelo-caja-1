.anuncio
	background peru
	&__box
		background lightgray
	&__c1
		background orange
		h2
			font-size 1.5em
			text-align center
		.c1__img
			text-align center
			img
				max-width 90%
		p
			padding 15px
	&__c2
		background purple
		padding-bottom 1em
		h2
			font-size 1.5em
			text-align center
		.video
			height 0
			padding-bottom 56.25%
			position relative
			overflow hidden
		iframe,
		object,
		embed,
		video
			width 100%
			height 100%
			position absolute
			right 0
			left 0
		p
			padding 15px	
	&__c3
		background green
		h2
			font-size 1.5em
			text-align center
		.c3__img
			text-align center	
			img
				max-width 90%
		p
			padding 15px
			


@media (min-width 768px)
	.anuncio
		&__box
			text-align center
			width 100%
			margin 0 auto
			padding-top 2em
		&__c1
			display inline-block
			width 45%
			vertical-align top
		&__c2
			display inline-block
			width 45%
			vertical-align top
		&__c3
			display inline-block
			width 90%
			
@media (min-width 1000px)
	.anuncio
		&__box
			text-align center
			// max-width 1200px
			width 100%
			margin 0 auto
			padding-top 2em
		&__c1
			display inline-block
			width 20%
			vertical-align top
		&__c2
			display inline-block
			width 50%
			vertical-align top
		&__c3
			display inline-block
			width 20%
			vertical-align top
			